<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="plain-console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>%d %-5level [%thread] %logger{0}: %msg%n</pattern>
        <immediateFlush>false</immediateFlush>
      </encoder>
    </appender>

    <logger name="de.digitalcollections.iiif.presentation.backend" level="error" />
    <logger name="de.digitalcollections.iiif.presentation.business" level="error" />
    <logger name="de.digitalcollections.core" level="error" />

    <root level="info">
      <appender-ref ref="plain-console" />
    </root>

</configuration>